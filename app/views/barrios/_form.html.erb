
<%= simple_form_for(@barrio, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>
  

  <%= f.input :nombre %>
  <%= f.input :municipio_id %>
  <div class="form-actions">

    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', barrios_path, :class => 'btn btn-small' %>
  </div>
<% end %>
