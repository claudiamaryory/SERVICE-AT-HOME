<%= simple_form_for @cliente, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombre %>
  <%= f.input :apellido %>
  <%= f.input :documento %>
  <%= f.input :direccion %>
  <%= f.input :barrio_id %>
  <%= f.input :telefono %>
  <%= f.input :celular %>
  <%= f.input :email %>
  <%= f.input :municipio_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clientes_path, :class => 'btn' %>
  </div>
<% end %>
